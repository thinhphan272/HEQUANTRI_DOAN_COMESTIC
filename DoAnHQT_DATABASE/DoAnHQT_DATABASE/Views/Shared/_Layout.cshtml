<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/fontawesome-free-7.0.1-web/css/all.min.css" />

    <link rel="stylesheet" href="~/Content/bootstrap-5.3.6-dist/css/bootstrap.css" />


    <link rel="stylesheet" href="~/Content/css/Main.css" />
    <link rel="stylesheet" href="~/Content/css/loginRegister.css" />

</head>
<body>
    <header class="fixed-top">
        <!--Thanh NAV-->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #306e51 ">
            <div class="container">
                <a class="navbar-brand text-light" href="#">
                    <img class="img-hover d-inline-block align-text-top" src="~/Content/Images/logo1.png" alt="Logo" width="150" height="50">

                </a>

                <div class="header-search d-flex" >
                    <div class="header-search-input-wrap">
                        <input class="header-search-input" type="text" placeholder="Tìm kiếm sản phẩm ..." />
                        <!--Search History-->
                        <div class="header-search-history">

                            <h5 class="header-search-history-heading">Lịch sử tìm kiếm</h5>
                            <ul class="header-search-history-list">
                                <li class="header-search-history-item">
                                    <a href="">Kem chống nắng</a>
                                </li>
                                <li class="header-search-history-item">
                                    <a href="">Sửa rửa mặt</a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <button class="header-search-btn">
                        <i class="header-search-btn-icon fa-solid fa-search"></i>
                    </button>
                
                </div>


                @*<form class="d-flex" role="search" style=" width: 400px">
                    <input class="form-control" style="border-radius:3px" type="search" placeholder="Tìm kiếm sản phẩm ..." aria-label="Search" />
                    <button class="btn btn-success " type="submit">
                        <i class="fa-solid fa-search"></i>
                    </button>
                </form>*@


                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav flex-grow-1 menu">
                        <li class="d-flex">
                            <i class="fa-solid fa-house fa-xl  align-self-center"></i>

                            <label>
                                @Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                            </label>

                        </li>

                        <li class="d-flex">
                            <i class="fa-solid fa-phone fa-xl  align-self-center"></i>

                            <label>
                                @Html.ActionLink("Chăm sóc khách hàng", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                            </label>


                        </li>

                        <li class="d-flex loggin">
                            <i class="fa-solid fa-user fa-xl  align-self-center"></i>
                            <label>
                                @Html.ActionLink("Đăng nhập / Đăng ký", "About", "Home", new { area = "" }, new { @class = "nav-link" })
                            </label>


                        </li>
                    </ul>
                    <i class="fa-solid fa-cart-shopping fa-xl align-self-center"></i>

                </div>
            </div>
        </nav>
        @*Thanh Menu*@


        <div style="background-color: rgb(137, 137, 137, 0.55)">
            <div class="row justify-content-center text-center text-light p-2">
                <!-- Danh mục sản phẩm -->
                <div class="menu-bar col-md-2 d-flex" data-dropdown="danh-muc">
                    <i class="fa-solid fa-bars text-dark me-1"></i>
                    <h6 class="menu-bar-item">DANH MỤC SẢN PHẨM</h6>
                </div>

                <div class="menu-bar col-md-2" data-dropdown="thuong-hieu">
                    <h6 class="menu-bar-item">THƯƠNG HIỆU</h6>
                </div>

                <div class="menu-bar col-md-2" data-dropdown="cham-soc-da">
                    <h6 class="menu-bar-item">CHĂM SÓC DA</h6>
                </div>

                <div class="menu-bar col-md-2" data-dropdown="trang-diem">
                    <h6 class="menu-bar-item">TRANG ĐIỂM</h6>
                </div>

                <div class="menu-bar col-md-2" data-dropdown="hang-moi">
                    <h6 class="menu-bar-item">HÀNG NEW</h6>
                </div>
            </div>
        </div>

        <!-- Dropdown Menu Toàn Màn Hình -->
        <div class="fullscreen-dropdown" id="fullscreenDropdown">
            <button class="dropdown-close" id="dropdownClose">
                <i class="fa-solid fa-xmark"></i>
            </button>
            <div class="dropdown-container">
                <!-- Nội dung dropdown sẽ được thay đổi bằng JavaScript -->
                <div class="dropdown-content" id="dropdownContent">
                    <!-- Nội dung sẽ được inject từ JavaScript -->
                </div>
            </div>
        </div>

    </header>

    <div id="carouselExampleInterval w-100" class="carousel slide" data-bs-ride="carousel" style="margin-top: 123px">
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="3000">
                <img style="border-radius: 0px" src="~/Content/Images/banner.jpg" class="d-block w-100" alt="ưu đãi">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img style="border-radius: 0px" src="~/Content/Images/banner2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="3000">
                <img style="border-radius: 0px" src="~/Content/Images/banner3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />



    </div>
    <footer>

        <div class="row justify-content-around text-center" style="background-color: #c4ffd0; padding: 20px 0;">
            <div class="col-md-2 col-6 mb-1">
                <img class="img-hover" src="~/Content/Images/icon_footer1.png" width="150" height="150" style="background-color: white; border-radius: 50%; box-shadow: 10px 10px 20px rgba(0,0,0,0.3) " />
                <p style="color: #306e51; font-weight: bold; font-family: Arial; margin-top: 10px;">Trả tiền<br />khi nhận hàng</p>
            </div>
            <div class="col-md-2 col-6 mb-1">
                <img class="img-hover" src="~/Content/Images/free.png" width="150" height="150" style="background-color: white; border-radius: 50%; box-shadow: 10px 10px 20px rgba(0,0,0,0.3) " />
                <p style="color: #306e51; font-weight: bold; font-family: Arial; margin-top: 10px;">Miễn phí<br />vận chuyển</p>
            </div>
            <div class="col-md-2 col-6 mb-1">
                <img class="img-hover" src="~/Content/Images/chinhhang.jpg" width="150" height="150" style="background-color: white; border-radius: 50%; box-shadow: 10px 10px 20px rgba(0,0,0,0.3)" />
                <p style="color: #306e51; font-weight: bold; font-family: Arial; margin-top: 10px;">Cam kết<br />hàng chính hãng</p>
            </div>
            <div class="col-md-2 col-6 mb-1">
                <img class="img-hover" src="~/Content/Images/doitra7.png" width="150" height="150" style="background-color: white; border-radius: 50%; box-shadow: 10px 10px 20px rgba(0,0,0,0.3) " />
                <p style="color: #306e51; font-weight: bold; font-family: Arial; margin-top: 10px;">Đổi trả<br />trong 7 ngày</p>
            </div>
            <div class="col-md-2 col-6 mb-1">
                <img class="img-hover" src="~/Content/Images/24_7.png" width="150" height="150" style="background-color: white; border-radius: 50%; box-shadow: 10px 10px 20px rgba(0,0,0,0.3)" />
                <p style="color: #306e51; font-weight: bold; font-family: Arial; margin-top: 10px;">Hỗ trợ<br />24/7</p>
            </div>


        </div>
        <div style="background-color: #306e51">
            <div class="container row p-2 text-light ms-5 ">
                <div class="col-md-2 col-lg-3 ">
                    <h6>HỖ TRỢ KHÁCH HÀNG</h6>
                    <ul class="list-group list-unstyled">
                        <li>Câu hỏi thường gặp</li>
                        <li>Gửi yêu cầu hỗ trợ</li>
                        <li>Hướng dẫn đặt hàng</li>
                        <li>Phương thức vận chuyển</li>
                        <li>Chính sách đổi trả</li>
                    </ul>

                </div>
                <div class="col-md-2 col-lg-3 ">
                    <h6>VỀ HASAKI.VN</h6>
                    <ul class="list-group list-unstyled">
                        <li>Giới thiệu Hasaki.vn</li>
                        <li>Chính sách bảo mật</li>
                        <li>Điều khoản sử dụng</li>
                        <li>Hasaki cẩm nang</li>
                        <li>Tuyển dụng</li>
                        <li>Liên hệ</li>
                    </ul>
                </div>
                <div class="col-md-2 col-lg-3 ">
                    <h6>HỢP TÁC LIÊN KẾT</h6>
                    <div class="d-flex mt-2 mb-2">
                        <i class="fa-brands fa-facebook fa-2x social-icon"></i>
                        <i class="fa-brands fa-instagram fa-2x social-icon"></i>
                        <i class="fa-brands fa-tiktok fa-2x social-icon"></i>
                    </div>



                    <h6>THANH TOÁN</h6>
                    <div class="d-flex">
                        <img width="50" class="img-hover me-2" src="~/Content/Images/MoMo_Logo.png" />
                        <img width="50" class="img-hover" src="~/Content/Images/vnpay.jpg" />
                    </div>
                </div>
                <div class="col-md-2 col-lg-3 ">
                    <h6>TẢI APP HASAKI TẠI ĐÂY</h6>
                    <div class="row d-flex app-section">
                        <div class="col-4">
                            <img src="~/Content/Images/qr_appcode.png" width="100" height="100" />
                        </div>
                        <div class="col-8 ">
                            <div class="app">
                                <i class="fa-brands fa-apple fa-2x social-icon" name="iconAppStore"></i>
                                <label for="iconAppStore"><a class="icon-label" href="https://apps.apple.com/us/app/hasaki-vn/id1173985273?ls=1">App Store</a></label>
                            </div>
                            
                            <div class="app">
                                <img class="img-hover" name="iconGooglePlay" src="~/Content/Images/GPicon.png" width="30" />
                                <label for="iconAppStore"><a class="icon-label" href="https://play.google.com/store/apps/details?id=vn.hasaki.buyer">Google Play</a></label>

                            </div>
                            
                        </div>


                    </div>
                </div>

            </div>
            <hr />
            <h4 class="text-center pb-4 text-light">&copy; @DateTime.Now.Year - HASAKI VIETNAM</h4>
        </div>



    </footer>

    <script src="~/Content/bootstrap-5.3.6-dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/css/js/dropdown.js"></script>
    <script src="~/Content/css/js/LoginRegister.js"></script>
    <!--Modal layout-->
    <div class="modal">
        <div class="modal_overlay"></div>

        <div class="modal_body">
            <!-- Form Đăng ký (ẩn ban đầu) -->
            <div class="auth-form register-form" style="display: none;">
                <div class="auth-form-container">
                    <div class="auth-form-header">
                        <h3 class="auth-form-heading">Đăng ký</h3>
                        <button class="auth-form-switch-btn btn switch-to-login">Đăng nhập</button>
                    </div>

                    <div class="auth-form_form">
                        <div class="auth-form_group">
                            <input type="text" class="auth-form_input" placeholder="Email của bạn" />
                        </div>
                        <div class="auth-form_group">
                            <input type="password" class="auth-form_input" placeholder="Mật khẩu" />
                        </div>
                        <div class="auth-form_group">
                            <input type="password" class="auth-form_input" placeholder="Nhập lại mật khẩu" />
                        </div>
                    </div>

                    <div class="auth-form_aside">
                        <p class="auth-form_policy-text">
                            Bằng việc đăng ký bạn đã đồng ý với Hasaki về
                            <a href="" class="auth-form_text-link">Điều khoản dịch vụ</a> &
                            <a href="" class="auth-form_text-link">Chính sách bảo mật</a>
                        </p>
                    </div>

                    <div class="auth-form_controls">
                        <button class="btn register_back-btn back-btn">TRỞ LẠI</button>
                        <button class="btn register_back-btn register-btn">ĐĂNG KÝ</button>
                    </div>
                </div>

                <div class="auth-form_socials">
                    <a href="" class="btn auth-facebook btn--with-icon">
                        <i class="auth-form_socials-icon auth-facebook-icon fa-brands fa-facebook-square"></i>
                        <span class="auth-form_socials-title">Kết nối với Facebook</span>
                    </a>
                    <a href="" class="btn auth-google btn--with-icon">
                        <img class="auth-form_socials-icon" src="~/Content/Images/gg-icon.png" alt="Google" />
                        <span class="auth-form_socials-title">Kết nối với Google</span>
                    </a>
                </div>
            </div>

            <!-- Form Đăng nhập (hiện ban đầu) -->
            <div class="auth-form login-form">
                <div class="auth-form-container">
                    <div class="auth-form-header">
                        <h3 class="auth-form-heading">Đăng nhập</h3>
                        <button class="auth-form-switch-btn btn switch-to-register">Đăng ký</button>
                    </div>

                    <div class="auth-form_form">
                        <div class="auth-form_group">
                            <input type="text" class="auth-form_input" placeholder="Email của bạn" />
                        </div>
                        <div class="auth-form_group">
                            <input type="password" class="auth-form_input" placeholder="Mật khẩu" />
                        </div>
                    </div>

                    <div class="auth-form_aside">
                        <div class="auth-form_help">
                            <a href="" class="auth-form_help-link auth-form_help-forgot">Quên mật khẩu</a>
                            <span class="auth-form_help-separate"></span>
                            <a href="" class="auth-form_help-link">Cần trợ giúp?</a>
                        </div>
                    </div>

                    <div class="auth-form_controls">
                        <button class="btn register_back-btn back-btn">TRỞ LẠI</button>
                        <button class="btn register_back-btn register-btn">ĐĂNG NHẬP</button>
                    </div>
                </div>

                <div class="auth-form_socials">
                    <a href="" class="btn auth-facebook btn--with-icon">
                        <i class="auth-form_socials-icon auth-facebook-icon fa-brands fa-facebook-square"></i>
                        <span class="auth-form_socials-title">Kết nối với Facebook</span>
                    </a>
                    <a href="" class="btn auth-google btn--with-icon">
                        <img class="auth-form_socials-icon" src="~/Content/Images/gg-icon.png" alt="Google" />
                        <span class="auth-form_socials-title">Kết nối với Google</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    

</body>
</html>
